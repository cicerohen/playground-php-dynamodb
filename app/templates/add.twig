{% extends 'base.twig' %}
{% block content %}
  <main>
      <div class="md:max-w-3xl md:mx-auto px-8 py-16">
        <h2 class="text-2xl font-semibold text-center text-gray-600 mb-8">Add a note</h2>
        <div>
          {% include 'toasts.twig' with { toasts: toasts } %}
        </div>
        <form class="flex flex-col space-y-4" method="post" action="{{ action }}">
            <input type="hidden" name="id" />
            <input name="title" type="text" class="flex-1 border border-gray-300 p-4 rounded-md "/>
            <textarea name="description" class="flex-1 border border-gray-300 rounded-md min-h-[400px] p-4">{{todo.description}}</textarea>
            <button class="px-6 py-3 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
              Save
            </button>
        </form>
      </div>
    </main>
{% endblock %}
