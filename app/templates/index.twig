{% extends 'base.twig' %}
{% block content %}
  <main>
      <div class="md:max-w-3xl md:mx-auto px-8 py-16">
        <h2 class="text-2xl font-semibold text-center text-gray-600">To Do List</h2>
        <div class="my-8 flex items-center justify-center">
          <a href="/add.php" class="px-6 py-3 border border-indigo-100 text-indigo-600 rounded-md hover:bg-indigo-50">
          Add a note
          </a>
        </div>
        <div>
          {% include 'toasts.twig' with { toasts: toasts } %}
        </div>
        <ul class="divide-y">
        {% for todo in todos %}
           <li class="py-4 flex justify-between">
            <div>
              <p class="font-semibold">{{todo.title}}</p>
              <p></p>
              <p class="text-sm text-gray-500">{{todo.description}}</p>
            </div>
            <div class="flex items-center">
              <a href="/edit.php?id={{todo.id}}"  class="px-4 py-2 text-gray-600 rounded-md text-sm hover:bg-gray-50">Edit</a>
              <a href="/delete.php?id={{todo.id}}" class="px-4 py-2 text-red-600 rounded-md text-sm hover:bg-red-50">Remove</a>
            </div>
          </li>
        {% endfor %}
        </ul>
      </div>
    </main>
{% endblock %}
